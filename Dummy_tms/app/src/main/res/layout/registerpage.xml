<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mgcl">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="REGISTER HERE"
                android:textSize="40dp"
                android:layout_marginRight="10sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/emp_id"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:inputType="number"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="Employee ID"/>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout3"
                android:layout_below="@id/relativeLayout2"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/emp_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:inputType="text"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="Employee Name"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout4"
                android:layout_below="@id/relativeLayout3"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/designation"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="Designation"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout5"
                android:layout_below="@id/relativeLayout4"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/contact"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:inputType="number"
                        android:ems="10"
                        android:hint="Mobile number"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout6"
                android:layout_below="@id/relativeLayout5"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout6"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="Email ID"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout7"
                android:layout_below="@id/relativeLayout6"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout7"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:inputType="textPassword"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="enter password"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:id="@+id/relativeLayout8"
                android:layout_below="@id/relativeLayout7"
                android:layout_centerHorizontal="true">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout8"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:inputType="textPassword"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:ems="10"
                        android:hint="re-enter password"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:layout_marginLeft="50sp"
                android:layout_below="@+id/relativeLayout8"
                android:id="@+id/submit"
                android:layout_alignBaseline="@+id/reset"
                android:layout_alignBottom="@+id/reset"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Reset"
                android:layout_marginTop="31dp"
                android:layout_marginLeft="250sp"
                android:id="@+id/reset"
                android:layout_below="@+id/relativeLayout8"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>




</RelativeLayout>